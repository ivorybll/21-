  display: block;
}
.mask{
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.8)
}
.mask image{
  width:360rpx;
  height:360rpx;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top:300rpx; 
  display: block;
  margin-bottom: 80rpx;
}
.upload,.againload{
  width:360rpx;
  height:70rpx; 
  border-radius: 10rpx;
  border:none;
  line-height: 70rpx;
  margin-bottom: 40rpx;
}
.upload{
  background:linear-gradient(180deg,rgba(255,78,2,1),rgba(255,118,6,1));
  color:white;
  font-size: 32rpx;
  
}
.againload{
  font-size: 32rpx;
  border:1rpx solid#FFFFFF;

}
.Meaningbottom{
  width: 100%;
  height: 98rpx;
  border-top: 1rpx solid #E5E5E5;
