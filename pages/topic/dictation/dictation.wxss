  background: white;
}
.Meaningbottom text{
  width: 50%;
  float: left;
  font-size: 24rpx;
  text-align: center;
  line-height: 98rpx;
}
.Meaningbottom button{
  margin-top: 15rpx;
  width: 360rpx;
  height: 70rpx;
  background:linear-gradient(180deg,rgba(255,78,2,1),rgba(255,118,6,1));
  float: left;  
  text-align: center;
  line-height: 70rpx;
  font-size:32rpx; 
  color:white;
}
