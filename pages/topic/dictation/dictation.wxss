}
.audioA{
  width: 670rpx;
  margin: 0 auto;
  margin-top: 42rpx;
}
.audioBo{
  margin-top: 38rpx;
  width: 100%;
  height: 640rpx;
  background:#F4F4F4;
  margin-bottom: 98rpx;
}

.audioBo image{
  width: 112rpx;
  height: 106rpx;
  display: block;
  margin: 0 auto;
  margin-top: 237rpx;
}
.audioBo text{
  font-size: 24rpx;
  display: block;
  text-align: center;
  color:#888888;
}
.audioAo{
  padding:40rpx 0; 
  margin-top: 38rpx;
