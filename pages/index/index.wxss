/* pages/index/index.wxss */
page{
  width: 100%;
  height: 100%;
  position:relative;
}
.verify{
    width: 560rpx;
  height: 290rpx;
  background: white;
  border-radius: 10rpx; 
  margin: 50% auto;
}
.verify text{
  font-size:36rpx;
  line-height:100rpx;
  display: block;
  text-align: center;
 
}
.verify view{
 
  padding-bottom:39rpx;
  border-bottom: 1rpx solid #ccc;

}
.verify view text{
  font-size:28rpx;
  line-height: 40rpx;
  color:#888888;
  text-align: center;

}
.verify button::after{ border: none; }
.verify button{
  height: 66rpx;
  line-height: 66rpx;
  font-size:36rpx;  
  color:#4691FF;
  outline: none;
  background: white;

}
.mask{
 position: absolute;
 top: 0;
 left: 0;
 right: 0;
 bottom:0;
 background: rgba(0,0,0,0.8)
}
.start{
  width:100%;
  
}
.start image{
  width: 80rpx;
  height: 120rpx;
  display: block;
  margin: 50rpx auto;
  }
.start text{
  font-size:35rpx;
  text-align: center;
  display: block;
}